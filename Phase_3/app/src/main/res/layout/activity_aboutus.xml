<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Aboutus">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/top_rectangle"
        android:visibility="visible"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="59dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/crs_logo" />
        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/aboutustext" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
        android:paddingStart="15dp"
        android:paddingTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who Are We ?"
            android:textSize="25sp"
            android:fontFamily="@font/britanic_bold"
            android:textColor="#1a4c65"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_rectangle"
        android:orientation="horizontal"
        android:onClick="bookmarkbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="90dp"
            android:onClick="settingsButton"
            android:src="@drawable/wheelicon"></ImageView>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="11dp"
            android:onClick="homebutton"
            android:src="@drawable/homepage_ic_noncolor"></ImageView>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/hearticon"></ImageView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>