<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/top_rectangle"
            android:visibility="visible">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="59dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/crs_logo" />

            <EditText
                android:layout_width="324dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Search a product "
                android:singleLine="true"></EditText>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="714dp"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="50dp"
                android:paddingLeft="30dp">

                <!--Question 1 With Choices -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--NUMBER 1 Image -->
                    <ImageView
                        android:id="@+id/num1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/num1"></ImageView>

                    <!--Question 1 Image -->
                    <ImageView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/qu1"
                        android:id="@+id/qu1"
                        android:layout_toRightOf="@id/num1"
                        android:layout_marginLeft="20dp"></ImageView>

                    <!-- Choice Laptop -->
                    <ImageView
                        android:id="@+id/laptop"
                        android:layout_width="83dp"
                        android:layout_height="68dp"
                        android:layout_below="@id/qu1"
                        android:layout_marginLeft="55dp"
                        app:srcCompat="@drawable/laptop" />

                    <!--Choice PC -->
                    <ImageView
                        android:id="@+id/pc"
                        android:layout_width="83dp"
                        android:layout_height="68dp"
                        android:layout_below="@id/qu1"
                        android:layout_marginLeft="60dp"
                        android:layout_toRightOf="@id/laptop"
                        app:srcCompat="@drawable/pc" />

                    <CheckBox
                        android:id="@+id/laptop_chk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.80"
                        android:scaleY="0.80"
                        android:layout_below="@id/laptop"
                        android:layout_marginLeft="80dp" />

                    <CheckBox
                        android:id="@+id/pc_chk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pc"
                        android:layout_marginLeft="112dp"
                        android:layout_toRightOf="@id/laptop_chk"
                        android:scaleX="0.80"
                        android:scaleY="0.80" />

                </RelativeLayout>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/num2"
                        android:id="@+id/num2"></ImageView>

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/qu2"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/num2"
                        android:id="@+id/qu2"></ImageView>

                    <ImageView
                        android:id="@+id/studych"
                        android:layout_width="83dp"
                        android:layout_height="68dp"
                        android:layout_below="@id/qu2"
                        android:layout_marginLeft="55dp"
                        app:srcCompat="@drawable/study_ic" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/studych"
                        android:layout_marginLeft="80dp"
                        android:id="@+id/study_rad"></RadioButton>

                    <ImageView
                        android:id="@+id/browesch"
                        android:layout_width="83dp"
                        android:layout_height="68dp"
                        android:layout_below="@id/qu2"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/studych"
                        app:srcCompat="@drawable/browes_ic" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/browesch"
                        android:layout_toRightOf="@id/study_rad"
                        android:layout_marginLeft="70dp"
                        android:id="@+id/browes_rad"></RadioButton>

                    <ImageView
                        android:id="@+id/editingch"
                        android:layout_width="83dp"
                        android:layout_height="68dp"
                        android:layout_below="@id/qu2"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/browesch"
                        app:srcCompat="@drawable/editing_ic" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editingch"
                        android:layout_toRightOf="@id/browes_rad"
                        android:layout_marginLeft="70dp"
                        android:id="@+id/editing_rad"></RadioButton>

                    <ImageView
                        android:id="@+id/gamingch"
                        android:layout_width="83dp"
                        android:layout_height="68dp"
                        android:layout_below="@id/browesch"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/gaming_ic" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gamingch"
                        android:layout_toRightOf="@id/study_rad"
                        android:layout_marginLeft="70dp"
                        android:id="@+id/gaming_rad"></RadioButton>


                </RelativeLayout>
                </RadioGroup>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/num3"
                    android:id="@+id/num3"></ImageView>

                <ImageView
                    android:id="@+id/qu3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/num3"
                    android:src="@drawable/qu3"></ImageView>

                <ImageView
                    android:id="@+id/screench"
                    android:layout_width="83dp"
                    android:layout_height="68dp"
                    android:layout_below="@id/qu3"
                    android:layout_marginLeft="55dp"
                    app:srcCompat="@drawable/screen_ic" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/screench"
                    android:layout_marginLeft="80dp"
                    android:id="@+id/screen_rad"></RadioButton>

                <ImageView
                    android:id="@+id/performancech"
                    android:layout_width="83dp"
                    android:layout_height="68dp"
                    android:layout_below="@id/qu3"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/screench"
                    app:srcCompat="@drawable/performance_ic" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/performancech"
                    android:layout_toRightOf="@id/screen_rad"
                    android:layout_marginLeft="70dp"
                    android:id="@+id/performance_rad"></RadioButton>

                <ImageView
                    android:id="@+id/portabilitych"
                    android:layout_width="83dp"
                    android:layout_height="68dp"
                    android:layout_below="@id/qu3"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/performancech"
                    app:srcCompat="@drawable/portability_ic" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/portabilitych"
                    android:layout_toRightOf="@id/performance_rad"
                    android:layout_marginLeft="70dp"
                    android:id="@+id/portability_rad"></RadioButton>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/num4"
                    android:id="@+id/num4"></ImageView>

                <ImageView
                    android:id="@+id/qu4"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/num4"
                    android:src="@drawable/qu4"></ImageView>

                    <org.florescu.android.rangeseekbar.RangeSeekBar
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/qu4"
                        android:layout_marginLeft="60dp"

                        android:background="@drawable/top_rectangle"></org.florescu.android.rangeseekbar.RangeSeekBar>
                </RelativeLayout>



            </LinearLayout>




        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:background="@drawable/bottom_rectangle"
            android:layout_gravity="bottom">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/wheelicon"></ImageView>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/homeicon"></ImageView>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/hearticon"></ImageView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>